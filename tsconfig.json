{
	"compilerOptions": {
		"target": "es2016",
		"module": "ESNext",
		"moduleResolution": "node",
		"baseUrl": "./",
		"allowJs": true,
		"noEmit": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"*": ["*", "*.ts", "*.js"]
		}
	},
	"include": ["lib/**/*", "rollup.config.js"],
	"exclude": ["node_modules"],
	"ts-node": {
		"esm": true
	}
}
